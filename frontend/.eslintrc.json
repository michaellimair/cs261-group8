{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "jest",
    "@typescript-eslint"
  ],
  "extends": [
    "plugin:jest/recommended",
    "plugin:jest/style",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "linebreak-style": "off"
  }
}
